<Window x:Class="Kepzes_Kezelo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kepzes_Kezelo"
        mc:Ignorable="d"
        Title="Képzés Kezelő" Height="450" Width="800">
    <Grid x:Name="asd">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Click="cAdd" Header="Hozzáadás"></MenuItem>
            <MenuItem Click="cVisualize" Header="Megjelenítés"></MenuItem>
            <MenuItem Click="cEdit" Header="Szerkeztés"></MenuItem>
        </Menu>
        <Grid Visibility="Hidden" x:Name="gAdd" Grid.Row="1"> </Grid>
        <Grid Visibility="Hidden" x:Name="gVisualize" Grid.Row="1"></Grid>
        <Grid Visibility="Hidden" x:Name="gEdit"  Grid.Row="1"></Grid>
    </Grid>
    
</Window>
